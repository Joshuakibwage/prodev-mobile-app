{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "types": ["nativewind/types"]
  },
  "include": [
    "nativewind-env.d.ts",
    "src",
    "components",
    "app",
    "**/*.ts",
    "**/*.tsx"
  ]
}

